# AI Story Management System Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# GitHub Configuration (Required)
# =============================================================================
# Your GitHub personal access token with repository access
GITHUB_TOKEN=your_github_token_here

# Target repository for single-repository mode (format: owner/repo)
# This is optional if using multi-repository mode
GITHUB_REPOSITORY=your_username/your_repository

# =============================================================================
# LLM Provider Configuration
# =============================================================================
# Choose your preferred LLM provider: openai, ollama, or github
DEFAULT_LLM_PROVIDER=github

# OpenAI Configuration (if using OpenAI provider)
OPENAI_API_KEY=your_openai_api_key_here

# Ollama Configuration (if using Ollama provider)
# Make sure Ollama server is running locally
OLLAMA_API_HOST=http://localhost:11434

# =============================================================================
# Application Configuration
# =============================================================================
# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Request timeout and retry settings
MAX_RETRIES=3
TIMEOUT_SECONDS=30

# =============================================================================
# Auto-Consensus Configuration (Optional)
# =============================================================================
# Enable automatic consensus checking
AUTO_CONSENSUS_ENABLED=false

# Consensus threshold percentage (0-100)
AUTO_CONSENSUS_THRESHOLD=70

# Maximum iterations for auto-consensus
AUTO_CONSENSUS_MAX_ITERATIONS=10

# =============================================================================
# Development Configuration (Optional)
# =============================================================================
# Set to 'true' for development mode with verbose logging
DEBUG_MODE=false
